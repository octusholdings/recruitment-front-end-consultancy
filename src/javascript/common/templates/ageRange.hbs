<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title">
		    	{{translate "rangeSelection" }}
	    	</h4>
		</div>
		<div class="modal-body">
			<div id="ageRangeSlider" style="width: 100%;">
				<input/>
				<input/>
			</div>

		    <h5>{{translate "startAge" }}:</h5>
            <input id="start" class="form-control" type="number" style="width: 100%;" value="{{startAge}}" />

            <h5 style="margin-top: 2em">{{translate "endAge" }}:</h5>
            <input id="end" class="form-control" type="number" style="width: 100%;" value="{{endAge}}" />
		</div>
		<div class="modal-footer">
			<div class="btn-group">
				<button type="button" class="btn btn-danger cancel-range" data-dismiss="modal">
		    		{{translate "no" }}
			    </button>
			    <button type="submit" class="btn btn-success confirm-range">
			    	{{translate "yes" }}
			    </button>
			</div>
		</div>
	</div>
</div>