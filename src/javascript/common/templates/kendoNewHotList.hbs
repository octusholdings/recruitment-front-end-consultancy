<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
		    {{translate 'newHotList'}}
		</div>
		<div class="modal-body form-horizontal">
			<p>{{translate "createANewHotList"}}</p>
	    	<div class="col-sm-12">
	    		<div class="form-group">
					<input class="form-control hotlist-name" type="text" placeholder="{{translate "name" }}">
