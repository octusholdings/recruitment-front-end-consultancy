                        <div class="tags-content pull-left">{{translate "tags"}}: <i><span class="tags"></span></i></div>
                        <div class="btn-group btn-group-sm pull-right">
                            <button class="btn btn-content-type btn-default show-text active">
                                <i class="fa fa-file-text-o" aria-hidden="true"></i> Text only
                            </button>
                            <button class="btn btn-content-type btn-default show-pdf">
                                <i class="fa fa-file-pdf-o" aria-hidden="true"></i> PDF
