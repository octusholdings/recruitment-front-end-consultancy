    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>{{name}}'s {{translate "documents"}}</h4>
            
            {{#if searchQuery}}
                {{translate "theKeyword"}} <span class="searchQuery">{{searchQuery}}</span> {{translate "hasFound"}} <span class="results"><span class="no"></span> {{translate "results"}}</span> {{translate "in"}} <span class="fileName"></span>
            {{/if}}
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-3 documents-list">
